.account-page
  .account-page__inner
    .account-page__header
      %h2 Find your SOUND'z
      %span
      %span
    .user-form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field-input
          = f.email_field :email, autofocus: true, placeholder: "Email"
        .field-input
          = f.password_field :password, autocomplete: "off", placeholder: "登録したパスワードを入力してください"
        .field-login
          = f.submit "LOG IN", class: "field-login__btn"
        %h5.field-message 新規アカウントの作成はこちら
        .field-signup
          = render "devise/shared/links"
