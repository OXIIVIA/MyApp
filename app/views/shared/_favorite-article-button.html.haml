- if current_user.favorite_articles.find_by(article_id: article.id)
  = link_to "YOUR FAVORITE", remove_favorite_article_path(article.id), method: :delete, class: "article-show__button-box__remove-favorite-btn", remote: true
- else
  = link_to "ADD FAVORITE", add_favorite_article_path(article.id), method: :post, class: "article-show__button-box__add-favorite-btn", remote: true