%header.header
  .header__wrapper
    = link_to "", root_path, class: "header__wrapper__logo"
    .menu
      #default-menu
        %ul.menu__list
          %li.menu__list__link
            = link_to "ARTICLES", "/"
          %li.menu__list__link
            = link_to "ARTISTS", artists_path
          %li.menu__list__link
            = link_to "FAVORITES", "/"
          %li.menu__list__link
            = link_to "VIDEOS", videos_path
          %li.menu__list__link
            = link_to "RANKING", "/"
          %li.menu__list__btn
            = fa_icon "search"
          %li.menu__list__btn
            = fa_icon "user"
      #user-menu
        %ul.menu__list
          - if user_signed_in?
            %li.menu__list__link
              %p.menu__list__link--user-name
                = "Welcome, #{current_user.name}!"
            - if current_user != nil && current_user.admin_flg?
              %li.menu__list__link
                = link_to "ADMIN", "/admin", target: :_blank
            %li.menu__list__link
              = link_to "MY PAGE", users_path(current_user)
            %li.menu__list__link
              = link_to "EDIT ACCOUNT", edit_user_path(current_user)
            %li.menu__list__link
              = link_to "LOG OUT", destroy_user_session_path, method: :delete
          - else 
            %li.menu__list__link
              = link_to "SIGN UP", new_user_registration_path
            %li.menu__list__link
              = link_to "LOG IN", new_user_session_path
          %li.menu__list__btn
            = fa_icon "times"
