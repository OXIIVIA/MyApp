.main
  .artist-data
    %h1.artist-data__name
      = @artist.name
    %span.artist-data__double-line
    = image_tag @artist.image, class: "artist-data__image"
    - if user_signed_in?
      .artist-data__menu
        %ul.artist-data__menu__list
          %li.artist-data__menu__list__link
            = link_to "EDIT DATA", "/"
          %li.artist-data__menu__list__link
            = link_to "DELETE DATA", "/"
    %span.artist-data__start-single-line
    %p.artist-data__text
      = safe_join(@artist.text.split("\n"), tag(:br))
    %span.artist-data__end-single-line
